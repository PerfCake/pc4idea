<idea-plugin version="2">
    <id>org.perfcake</id>
    <name>PerfCake Plugin</name>
    <version>3.3</version>
    <vendor email="kstanleykale@gmail.com">Stanislav Kaleta</vendor>

    <description>
        <![CDATA[Enter short description for your plugin here.]]>
    </description>

    <change-notes>
        <![CDATA[ Add change notes here.]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="131"/>  <!--until-build="135"-->


    <extensions defaultExtensionNs="com.intellij">
        <moduleType id="PERFCAKE_MODULE" implementationClass="org.perfcake.pc4idea.module.PCModuleType"/>
        <fileEditorProvider implementation="org.perfcake.pc4idea.editor.PerfCakeEditorProvider"/>
        <fileIconPatcher implementation="org.perfcake.pc4idea.editor.designer.common.PerfCakeIconPatcher"/>
        <runConfigurationProducer implementation="org.perfcake.pc4idea.configuration.PCRunConfigurationProducer"/>
        <configurationType implementation="org.perfcake.pc4idea.configuration.PCConfigurationType"/>
        <programRunner implementation="org.perfcake.pc4idea.execution.PCProgramRunner"/>
    </extensions>

    <application-components>
        <!-- Add your application comp here -->
    </application-components>

    <project-components>
        <!-- Add your project comp here -->
    </project-components>

    <actions>
        <action id="NewPCScenario" class="org.perfcake.pc4idea.wizard.NewScenarioAction" text="PerfCake Scenario"
                description="Create new PerfCake Scenario">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>
    </actions>

</idea-plugin>